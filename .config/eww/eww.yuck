(defwidget sep []
  (label :class "separ module" :text "|"))

; clipboard   

(defwidget workspaces []
  (literal :content workspace))

(defwidget left []
  (box
    :space-evenly false
    :halign "start"
    (launcher)
    ))

(defwidget right []
  (box
    :space-evenly false
    :halign "end"
    (bright)
    (volume)
    (net)
    (bluetooth)
    (sep)
    (cpu)
    (mem)
    (bat)
    (sep)
    (clock_module)))

(defwidget center []
  (box
    :space-evenly false
    :halign "center"
    (workspaces)))

(defwidget bar []
  (centerbox
    :class "bar"
    (left)
    (center)
    (right)))

(defwindow bar
  :monitor 0
  :geometry (geometry :x "0%"
    :y "0%"
    :width "100%"
    :height "32px"
  :anchor "top center")
  :stacking "fg"
  :windowtype "dock"
  :exclusive true
  :wm-ignore false
  (bar))
